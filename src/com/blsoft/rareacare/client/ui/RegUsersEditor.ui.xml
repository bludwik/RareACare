<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.panel {
		background-color: ivory;
	}
	</ui:style>

	<g:DockLayoutPanel styleName="{style.panel}" unit="EM" width="60EM" height="30EM">
		<g:center>
			<p1:DataGrid width="100%" height="100%" ui:field="dataGrid"/>
		</g:center>
		<g:north size="3">
			<g:HorizontalPanel width="100%" height="100%" spacing="4">
				<g:Cell width="100%">
					<g:Label/>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:PushButton text="Dodaj" width="8EM" ui:field="btnAddUser"/>
				</g:Cell>
			</g:HorizontalPanel>
		</g:north>
		<g:south size="3">
			<g:HorizontalPanel spacing="4">
				<g:Cell width="100%">
					<g:Label/>
				</g:Cell>
				<g:Cell width="8EM">
					<g:PushButton text="Zamknij" ui:field="btnClose"/>
				</g:Cell>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p2="urn:import:com.blsoft.rareacare.client.ui.controls">
	<ui:style>
	.panel {
		background-color: ivory;
	}
	</ui:style>

	<ui:with field='res' type='com.blsoft.rareacare.client.res.Images' />


	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:north size="60">

			<g:HorizontalPanel width="100%" spacing="4">
				<g:Cell verticalAlignment="ALIGN_MIDDLE" width="11EM">
					<g:Label text="Poszukiwany wpis" width="11EM"
						horizontalAlignment="ALIGN_RIGHT" height="" />
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER"
					verticalAlignment="ALIGN_MIDDLE">
					<g:TextBox text="Szukaj" ui:field="edSearch" width="97%" title = "Poszukiwany tekst - wpisz początek wartości jednej z poszukiwanych kolumn"></g:TextBox>
				</g:Cell>
				<p2:BLButton text="Szukaj" imageResource="{res.search}"	ui:field="btnSearch" title="Wyszukiwanie pozycji w rejestrze"/>
 				<p2:BLButton text="Eksportuj" imageResource="{res.export32}"	ui:field="btnExport" title ="Eksporowanie danych z rejestru do pliku"/>
 				<p2:BLButton text="Dodaj" imageResource="{res.add32}"	ui:field="btnAdd" title ="Dodawanie nowej pozycji do rejestru"/>
				<p2:BackButton ui:field="btnBack" title = "Powrót do listy rejestrów"/>
				<p2:HomeButton ui:field="btnHome" title = "Powrót do okna głownego aplikacji"/>
				<g:Cell height="" verticalAlignment="ALIGN_MIDDLE">
					<p2:LogoMini />
				</g:Cell>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:LayoutPanel width="" height="">
				<g:layer left="2.0em" top="0.0em" right="2.0em" bottom="0.0em">
					<p1:DataGrid width="100%" height="" ui:field="dataGrid"
						pageSize="15" />
				</g:layer>
			</g:LayoutPanel>
		</g:center>

		<g:south size="30">

			<!-- Pager. -->

			<g:HTMLPanel>
				<table style="width:100%">
					<tr>
						<td align='center'>
							<p1:SimplePager styleName="pageSizePager"
								ui:field='pager' />
						</td>
					</tr>
				</table>
			</g:HTMLPanel>

		</g:south>


	</g:DockLayoutPanel>

</ui:UiBinder>

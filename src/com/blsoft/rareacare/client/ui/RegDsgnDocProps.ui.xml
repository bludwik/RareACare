<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory; 
		} 
	</ui:style>

	<g:LayoutPanel width="50EM" height="35EM">
		<g:layer left="367px" width="109px" top="25.0em" height="26px">
			<g:PushButton text="Zapisz" ui:field="btnOk"/>
		</g:layer>
		<g:layer left="519px" width="109px" top="25.0em" height="26px">
			<g:PushButton text="Anuluj" ui:field="btnCancel"/>
		</g:layer>
		<g:layer left="4.0em" top="0.0em" height="23.0em" right="0.0em">
			<g:Grid cellPadding="10" cellSpacing="10">
				<g:row>
					<g:customCell>
						<g:Label text="Nazwa dokumentu"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="nameEditor" width="400px"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Opis dokumentu"/>
					</g:customCell>
					<g:customCell>
						<g:TextArea width="400px" height="5EM" ui:field="descrEditor"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text=""/>
					</g:customCell>
					<g:customCell>
						<g:HTML wordWrap="true">ID dokumentu musi być unikatowe w ramach rejestru. <br/>Może składać się z liter a-z, A-Z, 0-9 oraz znaku _</g:HTML>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="ID dokumentu"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="idEditor"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>

		<class>com.blsoft.rareacare.model.Fact</class>
		<class>com.blsoft.rareacare.model.Institution</class>
		<class>com.blsoft.rareacare.model.RegUser</class>
		<class>com.blsoft.rareacare.model.Registry</class>
		<class>com.blsoft.rareacare.model.User</class>
		<class>com.blsoft.rareacare.model.UserLoginLog</class>				
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/rac" />
			<property name="javax.persistence.jdbc.user" value="rac_admin" />
			<property name="javax.persistence.jdbc.password" value="rubik" />
<!-- 
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"	value="database" />
 -->
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.parameters" value="true" />

		</properties>
